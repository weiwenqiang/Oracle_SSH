		querySelectAll.setString("name", "a");
		querySelectAll.setString("sex", "unknow");
		List list = querySelectAll.list();
		for (int i = 0; i < list.size(); i++) {
			Person p = (Person) list.get(i);
			System.out.print(p.getId()+p.getSex() +p.getRole()+ "\r");
		}
//		Transaction tx = null;
