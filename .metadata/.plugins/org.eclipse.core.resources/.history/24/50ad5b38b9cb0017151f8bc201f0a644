<struts>
	<constant name="struts.multipart.maxSize" value="2000000"></constant>
	<package name="example" extends="struts-default">
		<action name="download" class="com.wwq.action.DownLoadAction">
			<result type="stream">
				<param name="contentDisposition">filename="a.mp3"</param>
				<param name="inputName">downloadFile</param>
			</result>
		</action>
		<action name="download" class="com.demo.tag.DownLoadAction1">
			<result type="stream">
				<param name="contentDisposition">">attachment;filename=${filename}</param>
				<param name="inputName">downloadFile</param>
			</result>
		</action>
		<action name="upload" class="com.demo.tag.FileAction">
			<result name="input">/upload.jsp</result>
		</action>
	</package>
</struts>
