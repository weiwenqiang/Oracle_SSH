<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.wwq.hibernate">
	<class name="com.wwq.hibernate.image.Image" table="image">
		<id name="id">
			<generator class="native"></generator>
		</id>
		<property name="date" column="create_date"></property>
		<property name="file" column="file" type="java.sql.Blob"></property>
		<property name="text" column="text" type="java.sql.Clob"></property>
	</class>
</hibernate-mapping>